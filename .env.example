# Whispermind_Conduit Configuration Template
# Copy this file to .env and configure with your specific values

# MQTT Broker Configuration
MQTT_HOST=your-mqtt-broker-host
MQTT_PORT=1883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password
MQTT_CLIENT_ID=whispermind-conduit

# LM Studio Configuration
LM_STUDIO_HOST=localhost
LM_STUDIO_PORT=1234
LM_STUDIO_API_KEY=
LM_STUDIO_ENDPOINT=/v1/chat/completions

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=swarmonomicon

# Service Configuration
SERVICE_NAME=WhispermindConduit
SERVICE_DESCRIPTION=Neural bridge between MQTT chat requests and LM Studio AI models
LOG_LEVEL=info
MAX_RETRIES=3
TIMEOUT_MS=30000
RECONNECT_INTERVAL=5000

# Chat Configuration
DEFAULT_MODEL=llama-3.1-8b-instruct
MAX_CONVERSATION_LENGTH=50
TYPING_INDICATOR_DELAY=1000
MAX_TOKENS=1000
TEMPERATURE=0.7

# Performance Configuration
CONCURRENT_REQUESTS=5
RESPONSE_CACHE_TTL=300
HEALTH_CHECK_INTERVAL=30000

# Windows Service Configuration (for production)
NODE_PATH=C:\Program Files\nodejs\node.exe
WORKING_DIRECTORY=C:\path\to\whispermind-conduit
SERVICE_ACCOUNT=LocalSystem
